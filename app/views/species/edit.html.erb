<ul id="headerUl">
  <li id="headerLi"><%= link_to "Back to the app", map_index_path %></li>
  <% if logged_in? %>
    <li id="headerLi"><%= link_to "Accounts", accounts_path %></li>
    <li id="headerLi"><%= link_to "Families", families_path %></li>
    <li id="headerLi"><%= link_to "Log out", logout_path, method: "delete" %></li>
  <% else %>
    <li id="headerLi"><%= link_to "Log in", login_path %></li>
  <% end %>
</ul>


<h1>Update the species</h1>

<% if @species.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@species.errors.count, "error") %>.
    </div>
    <ul>
      <% @species.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@species) do |f| %>
<div>
  <%= f.label :genusSpecies %>
  <%= f.text_field :genusSpecies %>
</div>

<div>
  <%= f.label :commonName %>
  <%= f.text_field :commonName %>
</div>

<div>
  <%= f.label :indigenousName %>
  <%= f.text_field :indigenousName %>
</div>

<%= f.collection_select(:family_id, Family.all, :id, :name) %>

<%= f.fields_for :images do |fff| %>
  <div>
    <%= fff.label :image %>
    <%= fff.file_field :image %>
  </div>

  <div>
    <%= fff.label :genusSpecies %>
    <%= fff.text_field :genusSpecies %>
  </div>

<% end %>

<%= f.fields_for :species_locations do |ff| %>
  <div>
    <%= ff.label :latitude %>
    <%= ff.number_field :lat, class: :text_field, step: :any %>
  </div>

  <div>
    <%= ff.label :longitude %>
    <%= ff.number_field :lon, class: :text_field, step: :any %>
  </div>

  <div>
    <%= ff.label :arborplan_id %>
    <%= ff.text_field :arborplan_id%>
  </div>

  <div>
    <%= ff.label :Information %>
    <%= ff.text_area :information %>
  </div>
  <% end %>
    <%= f.submit "Save changes"%>
  </p>
<% end %>
