li a{
  color:black;
  text-decoration: none;

}

ul.accounts {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 250px;
}

li.accounts {
    display: block;
    padding: 8px 16px;
}

#headerUl {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #A9A9A9;
}

