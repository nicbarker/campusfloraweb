<style>
li a{
  color:black;
  text-decoration: none;

}

ul.accounts {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 250px;
}

li.accounts {
    display: block;
    padding: 8px 16px;
}

#headerUl {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #A9A9A9;
}

#headerLi {
    float: left;
    display: block;
    color: white;
    padding: 14px 16px;
    text-decoration: none;
}
/* Change the link color on hover */
</style>

<ul id="headerUl">
  <li id="headerLi"><%= link_to "Back to the app", map_index_path %></li>
  <% if logged_in? %>
    <li id="headerLi"><%= link_to "Accounts", accounts_path %></li>
    <li id="headerLi"><%= link_to "Families", families_path %></li>
    <li id="headerLi"><%= link_to "Log out", logout_path, method: "delete" %></li>
  <% else %>
    <li id="headerLi"><%= link_to "Log in", login_path %></li>
  <% end %>
</ul>


<h1>Update the species</h1>

<% if @species.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= pluralize(@species.errors.count, "error") %>.
    </div>
    <ul>
      <% @species.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@species) do |f| %>
  <p>
    <%= f.label :GenusSpecies %><br>
    <%= f.text_field :genusSpecies %>
  </p>

  <p>
    <%= f.label :Phylogeny %><br>
    <%= f.text_field :genusSpecies %>
  </p>
  <p>
    <%= f.submit "Save changes"%>
  </p>
<% end %>
