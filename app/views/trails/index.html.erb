<style>
li a{
  color:black;
  text-decoration: none;

}

ul.accounts {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 250px;
}

li.accounts {
    display: block;
    padding: 8px 16px;
}

#headerUl {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #A9A9A9;
}

#headerLi {
    float: left;
    display: block;
    color: white;
    padding: 14px 16px;
    text-decoration: none;
}
/* Change the link color on hover */
</style>

<ul id="headerUl">
  <li id="headerLi"><%= link_to "Back to the app", map_index_path %></li>
  <% if logged_in? %>
    <li id="headerLi"><%= link_to "Accounts", accounts_path %></li>
    <li id="headerLi"><%= link_to "Families", families_path %></li>
    <li id="headerLi"><%= link_to "Species", species_index_path %></li>
    <li id="headerLi"><%= link_to "Log out", logout_path, method: "delete" %></li>
  <% else %>
    <li id="headerLi"><%= link_to "Log in", login_path %></li>
  <% end %>
</ul>

<% provide(:title, 'All users') %>
<h1>All trails</h1>
<%= link_to "Create new trail", new_trail_path %>

<%= will_paginate @trails %>


<ul>
  <% @trails.each do |trail| %>
    <li>
      <%= trail.name %>
      | <%= link_to "edit", edit_trail_path(trail) %>
      | <%= link_to "delete", trail, method: :delete, data: { confirm: "You sure?" } %>
    </li>
  <% end %>
</ul>
