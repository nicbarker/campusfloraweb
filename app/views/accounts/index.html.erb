<style>
li a{
  color:black;
  text-decoration: none;

}

ul.accounts {
    list-style-type: none;
    margin: 0;
    padding: 0;
    width: 250px;
}

li.accounts {
    display: block;
    padding: 8px 16px;
}

#headerUl {
    list-style-type: none;
    margin: 0;
    padding: 0;
    overflow: hidden;
    background-color: #A9A9A9;
}

#headerLi {
    float: left;
    display: block;
    color: white;
    padding: 14px 16px;
    text-decoration: none;
}
/* Change the link color on hover */
</style>

<ul id="headerUl">
  <li id="headerLi"><%= link_to "Back to the app", map_index_path %></li>
  <% if logged_in? %>
    <li id="headerLi"><%= link_to "Accounts", accounts_path %></li>
    <li id="headerLi"><%= link_to "Families", families_path %></li>
    <li id="headerLi"><%= link_to "Log out", logout_path, method: "delete" %></li>
  <% else %>
    <li id="headerLi"><%= link_to "Log in", login_path %></li>
  <% end %>
</ul>


<h1>All users</h1>
<ul class="accounts">
  <% @accounts.each do |user| %>
    <li class="accounts">
      <%= link_to user.name, user %>
      | <%= link_to "edit", edit_account_path(user) %>
      <% if !current_user?(user) %>
        | <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
      <% end %>
    </li>
  <% end %>
</ul>
